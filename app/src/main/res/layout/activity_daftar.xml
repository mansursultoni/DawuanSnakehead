<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/gradient_background_orange"
    tools:context=".DaftarActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_button01"
            android:fontFamily="sans-serif-condensed"
            android:text="Batal"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="DAFTAR"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/ic_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/daftar"/>
    <TextView
        android:id="@+id/keteranganNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_user"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:text="Isi nama Anda sebagai identitas"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/txtNama"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keteranganNama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_border"
        android:textColorHint="@color/black"
        android:hint="Nama"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:padding="16dp"/>
    //---------------
    <ImageView
        android:id="@+id/ic_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_phone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtNama"/>
    <TextView
        android:id="@+id/keteranganponsel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_phone"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:text="Masukan nomor telepon untuk melanjutkan"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/txtTelepon"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keteranganponsel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_border"
        android:textColorHint="@color/black"
        android:hint="+62 "
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:padding="16dp"/>
    //----------------
    <ImageView
        android:id="@+id/ic_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_verified"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtTelepon"/>
    <TextView
        android:id="@+id/keteranganverified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_verified"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:text="Isi nomor verifikasi yang diterima "
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/txtVerified"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keteranganverified"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_border"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:padding="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDaftar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="Daftar"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>